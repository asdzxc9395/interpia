 <select id="findByNo" resultMap="AcademyMap" parameterType="int">
	select
		*
	from 
		academy a, employee e
	where
		e.user_no = #{userNo}
 </select>
 
   <delete id="deleteAcademy" parameterType="int">
    delete from academy
    where user_no=#{userNo}
  </delete>
 
 	<update id="update" parameterType="Academy">
		update academy
		<set>
			<if test="academyName != null and academyName != ''">academy_name=#{academyName},</if>
			<if test="educationInstitution != null and educationInstitution != ''">education_institution=#{educationInstitution},</if>
			<if test="startDate != null and startDate != ''">start_date=#{startDate},</if>
			<if test="endDate != null">end_date=#{endDate},</if>
		</set>
		where
		user_no = #{userNo}
	</update>
 </mapper>